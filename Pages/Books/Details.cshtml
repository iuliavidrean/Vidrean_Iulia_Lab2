@page
@model Vidrean_Iulia_Lab2.Pages.Books.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author.FirstName) @Html.DisplayFor(model => model.Book.Author.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.PublishingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.PublishingDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Publisher.PublisherName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Publisher.PublisherName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.BookCategories)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Book.BookCategories != null && Model.Book.BookCategories.Any())
            {
                <ul>
                    @foreach (var cat in Model.Book.BookCategories)
                    {
                        <li>@cat.Category.CategoryName</li>
                    }
                </ul>
            }
            else
            {
                <span>Nicio categorie alocată.</span>
            }
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Book.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
